<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--完成对象的创建
    bean标签
        id属性：唯一标识
        class属性：要创建对象所在类的全路径
-->
    <bean id="user" class="com.yqy.User"></bean>
    <bean id="user1" class="com.yqy.User"></bean>

<!--    接口实现类获取过程-->
    <bean id="userDaoImpl" class="com.yqy.bean.UserDaoImpl"></bean>
    <bean id="personDaoImpl" class="com.yqy.bean.PersonDaoImpl"></bean>

</beans>